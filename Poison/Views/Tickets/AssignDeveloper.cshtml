@model Poison.Models.ViewModels.AssignDevToTicketViewModel

@{
    ViewData["Title"] = "Assign a Developer";
}

                            <div id="card_2" class="col-xxl-6 col-xl-6 col-lg-6 col-md-6 layout-spacing layout-top-spacing">
                                <div class="statbox widget box box-shadow">
                                    <div class="widget-header">
                                        <div class="row">
                                            <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                                <h4>@Model.Ticket!.Title</h4>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="widget-content widget-content-area">
    
                                        <div class="row">
    
                                            <div class="col-xxl-8 col-xl-12 col-lg-12 col-md-12 col-sm-8 mx-auto">
                                        
                                                <div class="card bg-secondary">
                                                    <div class="card-body">
                                                        <h5 class="card-title">Choose a developer</h5>
                                                        <p class="mb-0">
                                                            <form asp-action="AssignDeveloper" method="post">
                                                                <input asp-for="Ticket.Id" type="hidden"/>
                                                            <div class="form-group">
                                                                <label class="control-label">Developers</label>
                                                                <select asp-for="DeveloperId" class="form-control" asp-items="@Model.Developers">
                                                                    <option></option>
                                                                </select>

                                                            </div>

                                                            <div class="form-group">
                                                                <input type="submit" class="btn btn-primary"/>
                                                            </div>
                                                            </form>
                                                        </p>
                                                    </div>
                                                </div>
                                                
                                            </div>
    
                                        </div>                                   
    
                                    </div>
                                </div>
                            </div>

