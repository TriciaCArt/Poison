@model IEnumerable<Poison.Models.Ticket>

@{
    ViewData["Title"] = "Index";
}

<h1>All Tickets</h1>

<div class="table-responsive">
    <table class="table table-hover table-bordered">
        <thead>
            <tr>
                <th class="text-center" scope="col">@Html.DisplayNameFor(model => model.Title)</th>
                <th class="text-center" scope="col">
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th class="text-center" scope="col">
                    @Html.DisplayNameFor(model => model.Project)
                </th>
                <th class="text-center" scope="col">
                    @Html.DisplayNameFor(model => model.TicketPriority)
                </th>
                <th class="text-center" scope="col">
                    @Html.DisplayNameFor(model => model.TicketStatus)
                </th>
                <th class="text-center" scope="col">
                    @Html.DisplayNameFor(model => model.TicketType)
                </th>
                <th class="text-center" scope="col">
                    @Html.DisplayNameFor(model => model.SubmitterUser)
                </th>
                <th class="text-center" scope="col">
                    @Html.DisplayNameFor(model => model.DeveloperUser)
                </th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>

                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.Project.Description)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.TicketPriority.Name)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.TicketStatus.Name)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.TicketType.Name)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.SubmitterUser.FullName)
                    </td>
                    <td class="text-center">
                       @* @if(model.DeveloperUser.FullName == null){
                            <button class="btn btn-light-success" asp-action="AssignDeveloper">Assign Developer</button>
                        }else {
                            
                        }*@
                        @Html.DisplayFor(modelItem => item.DeveloperUser.FullName)
                        
                    </td>
                    <td>
                        <a class="btn-light-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a class="btn-light-secondary" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a class="btn-light-danger" asp-action="Archive" asp-route-id="@item.Id">Archive</a>
                        <a class="btn-light-warning" asp-action="UnassignedTickets" asp-route-id="@item.Id">Unassigned Tickets</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>