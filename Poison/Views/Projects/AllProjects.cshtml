@model IEnumerable<Poison.Models.Project>

@{
    ViewData["Title"] = "All Projects";
}

<h1>All Projects</h1>

<div class="table-responsive">
    <table class="table table-hover table-striped table-bordered">
        <thead>
            <tr>
                <th class="text-center" scope="col">@Html.DisplayNameFor(model => model.Name)</th>
                <th class="text-center" scope="col">@Html.DisplayNameFor(model => model.Description)</th>
                <th class="text-center" scope="col">@Html.DisplayNameFor(model => model.StartDate)</th>
                <th class="text-center" scope="col">@Html.DisplayNameFor(model => model.EndDate)</th>
                <th class="text-center" scope="col">@Html.DisplayNameFor(model => model.ImageFileData)</th>
                
                <th class="text-center" scope="col">@Html.DisplayNameFor(model => model.ProjectPriority)</th>
            </tr>
            <tr aria-hidden="true" class="mt-3 d-block table-row-hidden"></tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.Name)</td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.StartDate)</td>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.EndDate)</td>
                    <td class="text-center">
                        @if (item.ImageFileData != null)
                        {
                            <img class="" style="height:120px;width:120px" src="data:image/*;base64,@(Convert.ToBase64String(item.ImageFileData!))" alt="">
                        }
                    </td>
                    
                    <td> @Html.DisplayFor(modelItem => item.ProjectPriority.Name)</td>
                    <td>
                        <a class="btn-light-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a class="btn-light-secondary" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a class="btn-light-danger" asp-action="Archive" asp-route-id="@item.Id">Archive</a> |
                        <a class="btn-light-warning" asp-action="AssignProjectMembers" asp-route-id="@item.Id">Manage Team</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>





