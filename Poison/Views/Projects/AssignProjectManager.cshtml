@model Poison.Models.ViewModels.AssignProjectManagerViewModel

<div id="content" class="main-content">
    <div class="layout-px-spacing">

        <div class="container-xxl p-0">


            <div id="card_1" class="col-xxl-6 col-xl-6 col-lg-6 col-md-6 layout-spacing layout-top-spacing">
                <div class="statbox widget box box-shadow">
                    <div class="widget-header">
                        <div class="row">
                            <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                <h4>@Model.Project!.Name</h4>
                            </div>
                        </div>
                    </div>
                    <div class="widget-content widget-content-area">

                        <div class="row">

                            <div class="col-xxl-8 col-xl-12 col-lg-12 col-md-12 col-sm-8 mx-auto">

                                <div class="card">
                                    < class="card-body">
                                    <h5 class="card-title">Assign a project Manager Below</h5>
                                    <p class="mb-0">
                                        <form method="post" asp-controller="Projects" asp-action="AssignProjectManager">
                                            <input type="hidden" asp-for="Project!.Id" />

                                            <label class="control-label">Project Manager</label>
                                            <select asp-for="PMID" class="form-control" asp-items="@Model.PMList">
                                                <option></option>
                                            </select>
                                           
                                            <input type="submit" value="Update" class="btn btn-primary mt-2" />

                                        </form>
                                    </p>

                                </div>
                            </div>

                        </div>

                    </div>
                </div>
            </div>


        </div>
    </div>
</div>
